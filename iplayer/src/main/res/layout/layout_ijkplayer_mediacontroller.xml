<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_controller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#1c000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_video_play"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/layout_ijkplayer_mediacontroller_video_play"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="10:10"
            android:textColor="@color/layout_ijkplayer_mediacontroller_time"
            android:textSize="@dimen/layout_ijkplayer_mediacontroller_time_text_size" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="4dp"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:progress="0"
            android:progressDrawable="@drawable/layout_ijkplayer_mediacontroller_seekbar_drawable"
            android:thumb="@drawable/layout_ijkplayer_mediacontroller_seekbar_thumb" />

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="20:20"
            android:textColor="@color/layout_ijkplayer_mediacontroller_time"
            android:textSize="@dimen/layout_ijkplayer_mediacontroller_time_text_size" />

        <ImageView
            android:id="@+id/iv_fullscreen"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/layout_ijkplayer_mediacontroller_fullscreen" />
    </LinearLayout>

</RelativeLayout>